<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/header') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
        <h1 class=" text-3xl font-bold mb-6 text-center text-gray-800"><%= editing ? "Edit" :"Register"%> Your Resturant on AirBnB</h1>
        <form action="/host/<%=editing ? 'edit-resturant' : 'add-resturant'%>" method="POST" class="max-w-md mx-auto">
          <input type="hidden" name="id" value="<%=editing ? resturant._id : ''%> ">
          <input
            type="text"
            name="housename"
            value="<%= editing ? resturant.housename : '' %>"
            placeholder="Enter your resturant Name"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          />
          
          <input
            type="text"
            name="price"
            value="<%= editing ? resturant.price : '' %>"
            placeholder="price-range"
            class="w-10 px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          />
          <input
            type="text"
            name="location"
            value="<%= editing ? resturant.location : '' %>"
            placeholder="enter the address"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          />
          <input
            type="text"
            name="rating"
            value="<%= editing ? resturant.rating : '' %>"
            placeholder="rating"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          />
          <input
            type="text"
            name="photo"
            placeholder="enter photo url"
            value="<%= editing ? resturant.photo : '' %>"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          />
          <textarea
            name="description"
            value=""
            placeholder="describe your resturant"
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"><%= editing ? resturant.description : '' %>
          </textarea>
          <input type="submit" value="<%= editing ? 'Update resturant' : 'Add resturant' %>" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
        </form>
      </main>
      
</body>
</html>