<%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/header') %>

    <main class="mt-24 container mx-auto px-4">
        <h2 class="text-5xl font-bold text-gray-800 text-center my-10 animate-fade-in">
            DETAILS OF <%= resturant.housename %>
        </h2>
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 w-1/3 p-4 mx-auto">
            <img src="<%= resturant.photo %>" alt="<%= resturant.housename %>" class="w-full h-48 object-cover">
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= resturant.housename %></h3>
                <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i><%= resturant.location %></p>
                <div class="flex justify-between items-center">
                    <span class="text-lg font-bold text-indigo-600">â‚¹<%= resturant.price %>/night</span>
                    <div class="flex items-center">
                        <i class="fas fa-star text-yellow-400"></i>
                        <span class="ml-1 text-gray-700"><%= resturant.rating %>/5</span>
                    </div>
                </div>
                <form action="/favourites" method="POST">
                    <button class="fav">add to favourites </button>
                    <input type="hidden" name="id" value="<%=resturant._id%>">
                </form>
            </div>
        </div>
    </main>
</body>
</html>