<%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/header') %>

    <main class="mt-24 container mx-auto px-4">
        <h2 class="text-5xl font-bold text-gray-800 text-center p-10 animate-fade-in">
            DETAILS OF <%= resturant.housename %>
        </h2>
        <div class="bg-white rounded-xl  shadow-md overflow-hidden hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 max-w-4xl mx-auto">
            <img src="<%= resturant.photo %>" alt="<%= resturant.housename %>" class="w-full h-24 object-cover">
            <div class="p-6">
                <h3 class="text-3xl font-semibold text-gray-800 mb-4"><%= resturant.housename %></h3>
                <p class="text-gray-600 mb-4"><i class="fas fa-map-marker-alt mr-2"></i><%= resturant.location %></p>
                <p class="font-semibold"><%= resturant.description %></p>
                <div class="flex justify-between items-center mb-4">
                    <span class="text-2xl font-bold text-indigo-600">₹<%= resturant.price %>/night</span>
                    <div class="flex items-center">
                        <i class="fas fa-star text-yellow-400">⭐</i>
                        <span class="ml-1 text-gray-700"><%= resturant.rating %>/5</span>
                    </div>
                </div>
                <form action="/favourites" method="POST">
                    <button type="submit" class="fav">
                      Add to Favourite
                    </button>
                    <input type="hidden" name="id" value="<%= resturant._id %>" />
                  </form>
            </div>
        </div>
    </main>
</body>
</html>