<%- include('../partials/head') %>
<link rel="stylesheet" href="stylesextra.css.css">
</head>
<body >
    <%- include('../partials/header') %>

    <main class="mt-24 container mx-auto px-4">
        <h2 class="text-5xl font-bold text-gray-800 text-center my-10 animate-fade-in">
            Welcome to StreetBites
        </h2>
        <h3 class="text-3xl text-gray-700 font-semibold text-center mb-12">
            Here are our registered resturants
        </h3>
        <div class="max-w-6xl mx-auto flex1">
           
        <% regresturants.forEach(resturant => { %>
            <li class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 w-1/3 p-4"></li>
            <img src="<%= resturant.photo %>" alt="<%= resturant.housename %>"  class="w-10 h-48 object-cover">
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= resturant.housename %></h3>
                <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i><%= resturant.location %></p>
                <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-indigo-600">â‚¹<%= resturant.price %>/night</span>
                <div class="flex items-center">
                    <i class="fas fa-star text-yellow-400"></i>
                    <span class="ml-1 text-gray-700"><%= resturant.rating %>/5</span>
                </div>
                </div>
                <button class="booknow" >order now</button>
                <a  class="detail"  href="/resturants/<%= resturant._id %>">DETAILS</a>
            </div>
            </li>
        <% }) %>
        </div>
    </main>
    

</body>
</html>